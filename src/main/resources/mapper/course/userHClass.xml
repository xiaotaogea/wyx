<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zjwm.wyx.course.dao.UserHClassMapper">

    <resultMap type="com.zjwm.wyx.course.entity.UserHClass"
               id="userHClassMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="img" column="img"/>
        <result property="num" column="num"/>
        <result property="allTime" column="alltime"/>
        <result property="synopsic" column="abstract"/>
        <result property="type" column="type"/>
        <result property="price" column="price"/>
        <result property="oldPrice" column="old_price"/>
        <result property="snum" column="snum"/>
        <result property="addTime" column="addtime"/>

        <association property="userEntity" javaType="com.zjwm.wyx.course.entity.UserEntity">
            <result property="userId" column="id"/>
            <result property="username" column="username"/>
            <result property="mobile" column="mobile"/>
            <result property="password" column="password"/>
            <result property="createTime" column="create_time"/>
        </association>
    </resultMap>

    <resultMap type="com.zjwm.wyx.course.entity.Web" id="webMap">
        <result property="wwid" column="id"/>
        <result property="name" column="name"/>
        <association property="userWClasses"
                     javaType="com.zjwm.wyx.course.entity.UserWClass">
            <result property="id" column="id"/>
            <result property="acid" column="acid"/>
            <result property="wid" column="wid"/>
            <result property="clid" column="clid"/>
            <result property="status" column="status" />
        </association>
        <association property="allClass"
                     javaType="com.zjwm.wyx.course.entity.AllClass">
            <result property="id" column="id"/>
            <result property="name" column="name"/>
            <result property="wid" column="wid"/>
        </association>
    </resultMap>

    <select id="queryByTj" resultType="int">
        select DISTINCT wc.clid
        from
        hbb_web w
        join hbb_all_class ac
        join hbb_wclass wc
        join hbb_class c
        on w.id=ac.wid
        and ac.id=wc.acid
        and wc.clid=c.id

        <if test="wwid != null">
            and w.id=#{wwid}
        </if>
        <if test="acid != null">
            and wc.acid=#{acid}
        </if>
        <if test="status != null">
            and wc.status=#{status}
        </if>
    </select>

    <select id="queryByTjAndUid" resultType="int">
        select DISTINCT wc.clid
        from
        hbb_web w
        join hbb_all_class ac
        join hbb_wclass wc
        join hbb_class c
        join hbb_user u
        on w.id=ac.wid
        and ac.id=wc.acid
        and wc.clid=c.id
        and wc.uid=u.id
        <if test="wwid != null">
            and w.id=#{wwid}
        </if>
        <if test="acid != null">
            and wc.acid=#{acid}
        </if>
        <if test="userId != null">
            and u.id=#{userId}
        </if>
        <if test="status != null">
            and wc.status=#{status}
        </if>

    </select>

    <select id="queryAll" resultMap="userHClassMap">
		select * from hbb_class
	</select>
    <select id="queryObject" resultMap="userHClassMap">
		select * from hbb_class where
		id = #{id}
	</select>

</mapper>  