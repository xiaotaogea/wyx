<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zjwm.wyx.order.mapper.OrderMapper">

    <resultMap type="com.zjwm.wyx.order.entity.Order" id="orderMap">
        <result property="id" column="id"/>
        <result property="clid" column="clid"/>
        <result property="cName" column="cname"/>
        <result property="orderNo" column="orderno"/>
        <result property="price" column="price"/>
        <result property="status" column="status"/>
        <result property="payMent" column="payment"/>
        <result property="addTime" column="addtime"/>
        <result property="payTime" column="paytime"/>
        <result property="uid" column="uid"/>
    </resultMap>
    <select id="queryPay" resultMap="orderMap">
        select * from hbb_order where uid=#{uid}
        <if test="status!=null">
            and status=#{status}
        </if>

    </select>

</mapper>